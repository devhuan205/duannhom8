<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thoitrang.SplashScreenActivity"
    android:orientation="vertical"
    android:background="@color/white">


    <ImageView
        android:id="@+id/img_bong_giay"
        android:layout_width="270dp"
        android:layout_height="360dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/thlogoshop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="THỜI   TRANG   TRẺ"
        android:textColor="#d73a31"
        android:textSize="35dp" />


    <ImageView
        android:id="@+id/img_tuGiay"
        android:layout_width="match_parent"
        android:layout_height="357dp"
        android:layout_gravity="center"

        android:src="@drawable/sua1" />

</LinearLayout>
